{
    "$schema": "https://raw.githubusercontent.com/platformio/platformio-core/develop/platformio/assets/schema/library.json",
    "name": "NFCProtocols",
    "version": "1.0.0",
    "description": "C++ library for NFC communication protocols",
    "keywords": "communication, nfc, apple, vas, reader",
    "repository": {
        "type": "git",
        "url": "https://github.com/tan-nayir/NFCProtocols"
    },
    "authors": [
        {
            "name": "Tan Nayir",
            "maintainer": true
        },
        {
            "name": "Proxmark3 Contributors",
            "url": "https://github.com/RfidResearchGroup/proxmark3"
        }
    ],
    "license": "MIT",
    "dependencies": {},
    "frameworks": "*",
    "platforms": "*",
    "build": {
        "srcFilter": [
            "+<*>",
            "-<mbedtls-ecp-compression/*>",
            "+<mbedtls-ecp-compression/ecc_point_compression.c>"
        ],
        "flags": [
            "-Iinclude_priv",
            "-std=c++23"
        ]
    }
}